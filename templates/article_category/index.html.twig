{% extends 'base.html.twig' %}

{% block title %}ArticleCategory index{% endblock %}

{% block body %}
    <div class="container">
    <h1>ArticleCategory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article_category in article_categories %}
            <tr>
                <td>{{ article_category.id }}</td>
                <td>{{ article_category.code }}</td>
                <td>{{ article_category.name }}</td>
                <td>
                    <a href="{{ path('article_category_show', {'id': article_category.id}) }}">show</a>
                    <a href="{{ path('article_category_edit', {'id': article_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_category_new') }}" class="btn btn-primary">Create new</a>
    </div>
{% endblock %}
